# Telegram bot token from @BotFather
JACK_TELEGRAM_TOKEN=

# Comma-separated Telegram user IDs allowed to use the bot
# Get yours from @userinfobot
JACK_ALLOWED_USERS=

# Mode: "api" (default, for server) or "cli" (local, uses forest binary)
JACK_MODE=api

# Forest API (required when JACK_MODE=api)
JACK_FOREST_URL=http://localhost:3000
JACK_FOREST_API_KEY=

# Path to forest binary (only used when JACK_MODE=cli)
JACK_FOREST_BIN=forest
